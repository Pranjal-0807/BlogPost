<!DOCTYPE html>
<%- include('../partials/head') %>
<body>
  <%- include('../partials/header') %>

  <style>
    .inner-div-blogs {
      margin: 20px 0px;
      padding: 15px;
      border: 1px solid #ddd;
      /* border-left: 3px solid #444; */
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    .inner-div-blogs > p {
      margin-top: 6px;
    }
    .delete-btn {
      margin-top: 20px;
      padding: 5px 10px;
      background-color: red;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    #span-btn{
        padding: 5px 10px;
        color: rgba(3, 167, 222, 0.932);
        cursor: pointer;
    }
  </style>
  <main>
    <div id="main-div">
      <div class="inner-div-blogs">
        <h2 style="margin-bottom: 5px"><%= blog.title %></h2>
        <hr />
        <p style="float: right"><%= blog.author.name %></p>
        <p style="margin: 30px 0px 15px 0px"><%= blog.summary %></p>
        <p><%= blog.content %></p>
        <a href="/deleteBlog/id/<%= blog.id %>"><button class="delete-btn">Delete Blog</button></a>
        <a href="/blogs"><span id="span-btn">Back to Blog List</span></a>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %> 
</body>
